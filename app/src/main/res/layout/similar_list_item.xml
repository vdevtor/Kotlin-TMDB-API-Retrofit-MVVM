<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/similar_movie_poster"
        android:layout_width="@dimen/eighty_dp"
        android:layout_height="@dimen/one_hundred_twenty_one_dp"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:src="@drawable/ic_checked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/similar_movie_title_list"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:textColor="@color/white"
        android:text="Batman Forever and Robin"
        android:textSize="@dimen/eighteen_dp"
        app:layout_constraintStart_toEndOf="@id/similar_movie_poster"
        app:layout_constraintTop_toTopOf="@id/similar_movie_poster" />

    <TextView
        android:id="@+id/movie_year_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/three_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/fourteen_sp"
        android:text="2016"
        app:layout_constraintStart_toEndOf="@id/similar_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/similar_movie_title_list" />

    <TextView
        android:id="@+id/movie_category_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/three_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/fourteen_sp"
        android:text="Ação, Aventura, Fantasia"
        app:layout_constraintStart_toEndOf="@id/movie_year_list"
        app:layout_constraintTop_toBottomOf="@id/similar_movie_title_list" />

</androidx.constraintlayout.widget.ConstraintLayout>